<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ZyUi" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/zyPrimaryColor</item>
    </style>

    <style name="Theme.ZyTrustUi" parent="Base.Theme.ZyUi" />

    <style name="ZyToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/zyToolbarColor</item>
        <item name="android:background">@color/zyToolbarColor</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zyPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/zyPrimaryColor</item>
        <item name="colorOnPrimary">@color/zyWhite</item>
        <item name="colorSecondary">@color/zyPrimaryColor</item>
        <item name="colorSecondaryVariant">@color/zyPrimaryColor</item>
        <item name="colorOnSecondary">@color/zyBackgroundColorScreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- MODO DE USO. -->
        <item name="windowNoTitle">true</item>
    </style>

</resources>